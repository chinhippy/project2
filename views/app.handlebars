<!--This is the modal that pops when you click on a recipe-->
<div class="modal fade" id="recipeModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <img class="modal-image" src="">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p class="modal-ingredients"></p>
                <p class="modal-missing"></p>
                <p class="modal-time"></p>
                <p class="modal-calories"></p>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary modal-recipe" data-dismiss="modal">Make This Recipe</button>
                <button type="button" class="btn btn-secondary modal-close" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid">
  <div class="row headerRow">
    <div class="col-md-12">
      <h1>Fridge 2 Table</h1>
      <p id="userName" data-userid="{{userID}}">{{user}}</p><p id="titleDescription">'s Kitchen</p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
        <input type="text" class="newIngredient" placeholder="Add Ingredient">
        <button type="button" class="addIngredient centerButton">Add Ingredient</button>
        <ul style="list-style-type:none">
            <li>
                <p>Common Ingredients</p>
            </li>
            <li>
                <button type="button" data-use="false" class="useIngredient eggs">Use</button>
                <p class="ingredient" data-id="eggs">Eggs</p>
            </li>
            <li>
                <button type="button" data-use="false" class="useIngredient milk">Use</button>
                <p class="ingredient" data-id="milk">Milk</p>
            </li>
            <li>
                <button type="button" data-use="false" class="useIngredient pasta">Use</button>
                <p class="ingredient" data-id="pasta">Pasta</p>
            </li>
            <li>
                <button type="button" data-use="false" class="useIngredient cheese">Use</button>
                <p class="ingredient" data-id="cheese">Cheese</p>
            </li>
            <li>
                <p>Custom Ingredients</p>
            </li>
            {{#each Ingredient}}
                <li>
                    <button type="button" data-use="{{used}}" class="useIngredient notused {{id}}">Use</button>
                    <p class="ingredient" data-id={{id}} id={{id}}>{{label}}</p>
                    <button type="button" data-remove="{{id}}" class="removeIngredient">Remove</button>
                </li>
            {{/each}}
        </ul>
    </div>
    <div class="col-md-4" id="recipeResults">
       <button class="getRecipes centerButton">Get Recipes</button>
    </div>
    <div class="col-md-4">
        <button class="storeRecipes centerButton">Store Recipes</button>
        <ul style="list-style-type:none">
        {{#each Recipe}}
            <li>
                <h5 data-id={{id}}>{{label}}</h5>
                <img class="recipeImg" data-id="{{id}}" src="{{image}}">
                <button type="button" class="openSavedRecipe" data-id="{{id}}" data-src="{{url}}">Open Recipe</button>
                <button type="button" data-remove="{{id}}" class="removeRecipe">Remove</button>
            </li>
        {{/each}}
        </ul>
    </div>
  </div>
</div>